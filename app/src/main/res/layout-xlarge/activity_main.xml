<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <ImageView
            android:layout_width="match_parent"
            android:layout_height="250dp" app:srcCompat="@drawable/devslopesbanner"
            android:id="@+id/devslopesbanner"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent" android:scaleType="centerCrop"/>
    <ImageView
            android:layout_width="200dp"
            android:layout_height="200dp" app:srcCompat="@drawable/devslopesprofilelogo"
            android:id="@+id/logo"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
            android:layout_marginTop="180dp" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="@+id/devslopesbanner" android:layout_marginEnd="8dp"
            app:layout_constraintHorizontal_bias="0.03"/>
    <TextView
            android:text="Devslopes"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:id="@+id/devslopestext" android:textSize="32sp"
            android:layout_marginTop="32dp" app:layout_constraintTop_toBottomOf="@+id/devslopesbanner"
            app:layout_constraintStart_toEndOf="@+id/logo" android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.039"/>
    <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp" app:srcCompat="@drawable/camerabutton"
            android:id="@+id/imageView11"
            app:layout_constraintStart_toEndOf="@+id/devslopestext" app:layout_constraintHorizontal_bias="0.6"
            app:layout_constraintEnd_toStartOf="@+id/imageView12" app:layout_constraintTop_toTopOf="@+id/imageView12"
            app:layout_constraintBottom_toBottomOf="@+id/imageView12"
            app:layout_constraintHorizontal_chainStyle="packed" app:layout_constraintVertical_bias="0.0"/>
    <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp" app:srcCompat="@drawable/favoritebutton"
            android:id="@+id/imageView12"
            app:layout_constraintStart_toEndOf="@+id/imageView11" app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintEnd_toStartOf="@+id/imageView13" app:layout_constraintTop_toTopOf="@+id/imageView13"
            app:layout_constraintBottom_toBottomOf="@+id/imageView13" android:layout_marginLeft="24dp"
            android:layout_marginRight="24dp" app:layout_constraintVertical_bias="0.0"/>
    <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp" app:srcCompat="@drawable/inboxbutton"
            android:id="@+id/imageView13"
            app:layout_constraintStart_toEndOf="@+id/imageView12" app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginTop="32dp"
            app:layout_constraintTop_toBottomOf="@+id/devslopesbanner"/>
    <android.support.constraint.Guideline android:layout_width="wrap_content" android:layout_height="wrap_content"
                                          android:id="@+id/guideline3"
                                          android:orientation="vertical" app:layout_constraintGuide_percent="0.5075"/>
    <ImageView
            android:layout_width="0dp"
            android:layout_height="0dp" app:srcCompat="@drawable/codeimage"
            android:id="@+id/imageView14" android:layout_marginTop="44dp"
            app:layout_constraintTop_toBottomOf="@+id/logo"
            app:layout_constraintEnd_toStartOf="@+id/guideline3"
            android:layout_marginEnd="16dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="32dp" app:layout_constraintDimensionRatio="w,9:16"
            android:scaleType="centerCrop"/>
    <ImageView
            android:layout_width="0dp"
            android:layout_height="0dp" app:srcCompat="@drawable/dataimage"
            android:id="@+id/imageView15"
            app:layout_constraintTop_toTopOf="@+id/imageView14" app:layout_constraintStart_toEndOf="@+id/imageView14"
            android:layout_marginStart="16dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="32dp"
            app:layout_constraintDimensionRatio="h,16:9" android:scaleType="centerCrop"
            app:layout_constraintHorizontal_bias="1.0"/>
    <ImageView
            android:layout_width="0dp"
            android:layout_height="0dp" app:srcCompat="@drawable/imagesimage"
            android:id="@+id/imageView16"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="32dp"
            app:layout_constraintTop_toBottomOf="@+id/imageView14"
            app:layout_constraintEnd_toStartOf="@+id/guideline3" android:layout_marginEnd="16dp"
            app:layout_constraintHorizontal_bias="0.0"
            android:scaleType="centerCrop" app:layout_constraintDimensionRatio="16:9" android:layout_marginTop="32dp"/>
    <ImageView
            android:layout_width="0dp"
            android:layout_height="0dp" app:srcCompat="@drawable/videosimage"
            android:id="@+id/imageView17" android:layout_marginTop="28dp"
            app:layout_constraintTop_toBottomOf="@+id/imageView15" app:layout_constraintStart_toEndOf="@+id/imageView16"
            android:layout_marginStart="16dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="32dp"
            app:layout_constraintDimensionRatio="16:9" android:scaleType="centerCrop"
            app:layout_constraintHorizontal_bias="0.0"/>
    <Button
            android:text="CUSTOMZE DASHBOARD"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:id="@+id/button" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintHorizontal_bias="0.5" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="32dp" app:layout_constraintTop_toBottomOf="@+id/imageView16"
            style="@style/Widget.AppCompat.Button.Borderless.Colored" android:background="#F44336"
            android:textColor="#9C27B0" android:textSize="18sp"/>
</android.support.constraint.ConstraintLayout>